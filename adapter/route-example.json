{
  "description": "路由配置示例 - 支持两种格式",
  "comment1": "新格式：使用 conditions 数组 + operator 实现多条件匹配",
  "comment2": "旧格式：使用 routeField + match 实现单字段匹配（向后兼容）",
  
  "routes": [
    {
      "name": "紧急告警",
      "comment": "示例1：AND 逻辑 - 所有条件都必须满足",
      "conditions": [
        {"field": "body.type", "match": "error"},
        {"field": "body.level", "match": "critical"}
      ],
      "operator": "AND",
      "to": "https://webhook.site/urgent-webhook-id",
      "method": "POST",
      "headers": {
        "Authorization": "Bearer {{env.URGENT_TOKEN}}",
        "Content-Type": "application/json; charset=UTF-8",
        "X-Alert-Type": "urgent"
      },
      "body": {
        "severity": "urgent",
        "message": "{{body.message}}",
        "user": "{{body.user.name}}",
        "timestamp": "{{body.timestamp}}"
      }
    },
    {
      "name": "普通告警",
      "comment": "示例2：OR 逻辑 - 满足任一条件即可，支持正则表达式",
      "conditions": [
        {"field": "body.type", "match": "error"},
        {"field": "body.severity", "match": "/high|critical/"}
      ],
      "operator": "OR",
      "to": "https://webhook.site/alert-webhook-id",
      "method": "POST",
      "headers": {
        "Authorization": "Bearer {{env.ALERT_TOKEN}}",
        "Content-Type": "application/json; charset=UTF-8"
      },
      "body": {
        "level": "alert",
        "content": "{{body.message}}"
      }
    },
    {
      "name": "信息通知",
      "comment": "示例3：复杂的 OR 条件 - 使用正则表达式对象格式",
      "conditions": [
        {"field": "body.status", "match": {"regex": "info|debug", "flags": "i"}},
        {"field": "body.level", "match": "low"}
      ],
      "operator": "OR",
      "to": "https://webhook.site/info-webhook-id",
      "method": "POST",
      "headers": {
        "Authorization": "Bearer {{env.INFO_TOKEN}}",
        "Content-Type": "application/json; charset=UTF-8"
      }
    }
  ],
  
  "comment3": "默认路由：当所有条件都不匹配时使用",
  "default": {
    "name": "默认路由",
    "to": "https://webhook.site/default-webhook-id",
    "method": "POST",
    "headers": {
      "Authorization": "Bearer {{env.DEFAULT_TOKEN}}",
      "Content-Type": "application/json; charset=UTF-8"
    },
    "body": {
      "forwarded_data": "{{body}}"
    }
  },
  
  "method": "POST",
  "headers": {
    "User-Agent": "ewhooks/1.0.0"
  }
}